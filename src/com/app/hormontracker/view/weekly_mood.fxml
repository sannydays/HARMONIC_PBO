<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@style.css" styleClass="main-bg"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.app.hormontracker.controller.WeeklyMoodController">

    <VBox alignment="CENTER" spacing="15" maxWidth="550" maxHeight="700"
