<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: #fff0f6;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.hormontracker.controller.LoginController">

    <VBox fx:id="loginContainer" alignment="CENTER" spacing="20" maxWidth="350" style="-fx-padding: 30;">
        
        <Label text="Hormone Tracker ✿" textFill="#e75480">
            <font><Font name="Arial Bold" size="28"/></font>
        </Label>
        
        <VBox style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5);" spacing="15">
            <Label text="Selamat Datang Kembali!" textFill="#888" style="-fx-font-style: italic;"/>
            
            <VBox spacing="5">
                <Label text="Username" textFill="#e75480" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
                <TextField fx:id="tfLoginUser" promptText="Masukkan username" 
                           style="-fx-background-radius: 8; -fx-border-color: #ffcce0; -fx-padding: 8;"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Password" textFill="#e75480" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
                <PasswordField fx:id="pfLoginPass" promptText="Masukkan password" 
                               style="-fx-background-radius: 8; -fx-border-color: #ffcce0; -fx-padding: 8;"/>
            </VBox>
            
            <Label fx:id="lblLoginMsg" textFill="RED" wrapText="true" style="-fx-font-size: 11px;"/>
            
            <Button text="Masuk Aplikasi" onAction="#actionLogin" maxWidth="Infinity"
                    style="-fx-background-color: #ff9ac1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand;"/>
        </VBox>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Belum punya akun?" textFill="#888"/>
            <Hyperlink text="Daftar Sekarang" onAction="#switchToRegister" textFill="#e75480" style="-fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <VBox fx:id="registerContainer" alignment="CENTER" spacing="15" maxWidth="350" style="-fx-padding: 20;" visible="false">
        
        <Label text="Create Account ✿" textFill="#e75480">
            <font><Font name="Arial Bold" size="24"/></font>
        </Label>
        
        <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5);" spacing="10">
            
            <TextField fx:id="tfRegUser" promptText="Username Baru" 
                       style="-fx-background-radius: 8; -fx-border-color: #ffcce0;"/>
            
            <TextField fx:id="tfRegEmail" promptText="Email (contoh@email.com)" 
                       style="-fx-background-radius: 8; -fx-border-color: #ffcce0;"/>
            
            <PasswordField fx:id="pfRegPass" promptText="Password Baru" 
                           style="-fx-background-radius: 8; -fx-border-color: #ffcce0;"/>
            
            <Separator style="-fx-background-color: #ffe0f0;"/>
            
            <Label text="Info Siklus (Penting!)" textFill="#e75480" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Rata2 Siklus:" textFill="#888" style="-fx-font-size: 11px;"/>
                <TextField fx:id="tfRegCycle" promptText="28" prefWidth="50"
                           style="-fx-background-radius: 8; -fx-border-color: #ffcce0; -fx-alignment: CENTER;"/>
                <Label text="Hari" textFill="#888" style="-fx-font-size: 11px;"/>
            </HBox>
            
            <VBox spacing="2">
                <Label text="Tanggal Haid Terakhir:" textFill="#888" style="-fx-font-size: 11px;"/>
                <DatePicker fx:id="dpRegLast" promptText="Pilih Tanggal" maxWidth="Infinity"
                            style="-fx-background-radius: 8; -fx-border-color: #ffcce0;"/>
            </VBox>
            
            <Label fx:id="lblRegMsg" textFill="RED" wrapText="true" style="-fx-font-size: 10px;"/>
            
            <Button text="Daftar &amp; Simpan" onAction="#actionRegister" maxWidth="Infinity"
                    style="-fx-background-color: #ff9ac1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand;"/>
        </VBox>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Sudah punya akun?" textFill="#888"/>
            <Hyperlink text="Login di sini" onAction="#switchToLogin" textFill="#e75480" style="-fx-font-weight: bold;"/>
        </HBox>
    </VBox>

</StackPane>