<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #fff0f6; -fx-padding: 20;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.hormontracker.controller.GuidebookController">
    <Label text="Guidebook" textFill="#e75480">
        <font><Font name="Arial Bold" size="24"/></font>
    </Label>

    <Accordion fx:id="guideAccordion">
        <panes>
            <TitledPane text="Fase Menstruasi (Hari 1-5)">
                <Label text="Kadar estrogen dan progesteron rendah. Dinding rahim meluruh. Energi cenderung rendah." wrapText="true"/>
            </TitledPane>
            <TitledPane text="Fase Folikular (Hari 6-13)">
                <Label text="Estrogen mulai naik. Kulit lebih cerah, energi meningkat. Waktu yang baik untuk beraktivitas." wrapText="true"/>
            </TitledPane>
            <TitledPane text="Ovulasi (Hari 14)">
                <Label text="Sel telur dilepaskan. Libido meningkat. Masa paling subur dalam siklus." wrapText="true"/>
            </TitledPane>
            <TitledPane text="Fase Luteal (Hari 15-28)">
                <Label text="Progesteron dominan. Tubuh bersiap jika terjadi kehamilan. Jika tidak, PMS bisa muncul (mood swing, kram)." wrapText="true"/>
            </TitledPane>
        </panes>
    </Accordion>

    <Button text="Back" onAction="#back" style="-fx-background-color: transparent; -fx-text-fill: #e75480; -fx-underline: true;"/>
</VBox>