<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #fff0f6; -fx-padding: 20;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.hormontracker.controller.GuidebookController">
    <Label text="Guidebook Siklus Menstruasi" textFill="#e75480">
        <font><Font name="Arial Bold" size="24"/></font>
    </Label>

    <ScrollPane fitToWidth="true" prefHeight="600" style="-fx-background-color: transparent;">
        <Accordion fx:id="guideAccordion">
            <panes>
                <TitledPane text="Fase Menstruasi (Hari 1-5)">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <ImageView fitWidth="130" preserveRatio="true" image="@../assets/estrogen.png"/>
                        
                        <Label wrapText="true" text="Pada fase ini, kadar estrogen dan progesteron sangat rendah. Dinding rahim meluruh sehingga terjadi menstruasi. Energi biasanya menurun dan mood lebih sensitif."/>
                        
                        <Label text="Tips Saat Menstruasi:" style="-fx-font-weight: bold; -fx-text-fill: #e75480;"/>
                        <Label wrapText="true" text="- Minum air hangat atau teh herbal (chamomile/jahe)&#10;- Kompres hangat di perut bawah untuk meredakan kram&#10;- Hindari kafein dan alkohol&#10;- Istirahat cukup (tidur 7-8 jam)&#10;- Olahraga ringan seperti jalan santai atau yoga&#10;- Makan makanan kaya zat besi (bayam, daging merah)&#10;- Ganti pembalut setiap 4-6 jam&#10;- Mandi air hangat untuk relaksasi"/>
                        
                        <Label text="Gejala Sebelum Menstruasi (PMS):" style="-fx-font-weight: bold; -fx-text-fill: #e75480;"/>
                        <Label wrapText="true" text="- Kram perut atau nyeri punggung bawah&#10;- Payudara terasa kencang atau nyeri&#10;- Mood swing (mudah marah, sedih, atau cemas)&#10;- Kembung dan perut terasa penuh&#10;- Jerawat muncul&#10;- Lelah dan lemas&#10;- Sakit kepala&#10;- Nafsu makan meningkat (ngidam makanan manis/asin)&#10;- Sulit tidur"/>
                        
                        <Label text="Gejala Saat Menstruasi:" style="-fx-font-weight: bold; -fx-text-fill: #e75480;"/>
                        <Label wrapText="true" text="- Kram perut (dismenore)&#10;- Pendarahan (2-7 hari)&#10;- Mood swing&#10;- Lelah dan energi rendah&#10;- Nyeri punggung bawah&#10;- Diare atau sembelit"/>
                        
                        <Label text="Cara Merawat Diri Saat Menstruasi:" style="-fx-font-weight: bold; -fx-text-fill: #e75480;"/>
                        <Label wrapText="true" text="Kebersihan:&#10;- Ganti pembalut setiap 4-6 jam (atau lebih sering jika perlu)&#10;- Cuci area kewanitaan dengan air bersih (dari depan ke belakang)&#10;- Gunakan sabun pembersih khusus area sensitif (pH balanced)&#10;- Gunakan pakaian dalam berbahan katun yang menyerap keringat&#10;- Hindari douching (menyemprot ke dalam vagina)"/>
                        
                        <Label wrapText="true" text="Kenyamanan:&#10;- Pakai pakaian longgar dan nyaman&#10;- Gunakan bantal pemanas atau botol air hangat untuk kram&#10;- Tidur dengan posisi meringkuk (fetal position) untuk redakan kram&#10;- Gunakan alas tidur tambahan jika takut bocor&#10;- Bawa pembalut cadangan saat bepergian"/>
                        
                        <Label wrapText="true" text="Kesehatan Mental:&#10;- Luangkan waktu untuk me-time dan istirahat&#10;- Lakukan aktivitas yang menenangkan (membaca, mendengar musik)&#10;- Jangan ragu untuk mengatakan tidak pada aktivitas berat&#10;- Komunikasikan perasaanmu pada orang terdekat&#10;- Praktikkan breathing exercise atau meditasi ringan"/>
                        
                        <Label wrapText="true" text="Hidrasi dan Nutrisi:&#10;- Minum air putih minimal 8 gelas per hari&#10;- Konsumsi makanan hangat dan mudah dicerna&#10;- Hindari makanan pedas, berlemak tinggi, dan terlalu asin&#10;- Minum teh herbal (chamomile, jahe, peppermint)&#10;- Konsumsi dark chocolate untuk mood booster (dalam jumlah wajar)"/>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Fase Folikular (Hari 6-13)">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <ImageView fitWidth="130" preserveRatio="true" image="@../assets/fsh.png"/>
                        
                        <Label wrapText="true" text="Estrogen meningkat, energi naik, kulit lebih cerah. Ini adalah waktu yang baik untuk produktif dan beraktivitas."/>
                        
                        <Label text="Tips:" style="-fx-font-weight: bold; -fx-text-fill: #e75480;"/>
                        <Label wrapText="true" text="- Olahraga intensitas sedang hingga tinggi&#10;- Produktif kerja/belajar&#10;- Makan protein tinggi&#10;- Manfaatkan energi tinggi"/>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Ovulasi (Hari 14)">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <ImageView fitWidth="130" preserveRatio="true" image="@../assets/lh.png"/>
                        
                        <Label wrapText="true" text="Sel telur dilepaskan. Estrogen puncak dan LH naik. Libido meningkat. Masa paling subur dalam siklus."/>
                        
                        <Label text="Tips:" style="-fx-font-weight: bold; -fx-text-fill: #e75480;"/>
                        <Label wrapText="true" text="- Banyak minum air putih&#10;- Pakaian nyaman&#10;- Cocok untuk aktivitas sosial&#10;- Waktu yang baik untuk komunikasi"/>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Fase Luteal (Hari 15-28)">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <ImageView fitWidth="130" preserveRatio="true" image="@../assets/progesteron.png"/>
                        
                        <Label wrapText="true" text="Progesteron dominan. Tubuh bersiap jika terjadi kehamilan. Jika tidak, gejala PMS mungkin muncul (mood swing, kram)."/>
                        
                        <Label text="Gejala PMS:" style="-fx-font-weight: bold; -fx-text-fill: #e75480;"/>
                        <Label wrapText="true" text="- Mood swing&#10;- Jerawat&#10;- Sensitif&#10;- Kembung&#10;- Kelelahan"/>
                        
                        <Label text="Tips:" style="-fx-font-weight: bold; -fx-text-fill: #e75480;"/>
                        <Label wrapText="true" text="- Kurangi makanan asin&#10;- Olahraga ringan seperti yoga&#10;- Konsumsi Vitamin B6 dan magnesium&#10;- Cukup tidur&#10;- Hindari stres berlebihan"/>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Informasi Tentang Hormon">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <Label text="Estrogen" style="-fx-font-weight:bold; -fx-text-fill:#d63384; -fx-font-size: 14px;"/>
                        <Label wrapText="true" text="Hormon yang membuat mood stabil, kulit lebih cerah, dan energi meningkat. Mencapai puncak saat ovulasi."/>
                        
                        <Label text="Progesteron" style="-fx-font-weight:bold; -fx-text-fill:#d63384; -fx-font-size: 14px;"/>
                        <Label wrapText="true" text="Mempersiapkan rahim untuk kehamilan. Dominan di fase luteal. Dapat menyebabkan gejala PMS."/>
                        
                        <Label text="FSH (Follicle Stimulating Hormone)" style="-fx-font-weight:bold; -fx-text-fill:#d63384; -fx-font-size: 14px;"/>
                        <Label wrapText="true" text="Hormon yang mematangkan sel telur di ovarium selama fase folikular."/>
                        
                        <Label text="LH (Luteinizing Hormone)" style="-fx-font-weight:bold; -fx-text-fill:#d63384; -fx-font-size: 14px;"/>
                        <Label wrapText="true" text="Memicu pelepasan sel telur (ovulasi) ketika mencapai puncaknya."/>
                    </VBox>
                </TitledPane>
            </panes>
        </Accordion>
    </ScrollPane>

    <Button text="Back" onAction="#back" style="-fx-background-color: transparent; -fx-text-fill: #e75480; -fx-underline: true;"/>
</VBox>
