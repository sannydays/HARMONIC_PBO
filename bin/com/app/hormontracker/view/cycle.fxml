<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25" 
      stylesheets="@style.css" styleClass="main-bg"
      style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.app.hormontracker.controller.CycleController">

    <Label text="Cycle Phase" styleClass="title-text">
        <font><Font name="Arial Bold" size="24"/></font>
    </Label>
    
    <StackPane>
        <Circle fx:id="indicatorCircle" radius="95" fill="WHITE" stroke="#ff9ac1" strokeWidth="5"
                style="-fx-effect: dropshadow(three-pass-box, rgba(255, 154, 193, 0.4), 10, 0, 0, 4);"/>
        
        <VBox alignment="CENTER">
            <Label fx:id="lblDay" text="Day ?" textFill="#e75480" style="-fx-font-size: 32; -fx-font-weight: bold;"/>
            <Label fx:id="lblPhase" text="..." textFill="#888" style="-fx-font-size: 14; -fx-font-style: italic;"/>
        </VBox>
    </StackPane>
    
    <Label fx:id="lblDetail" text="Loading..." textAlignment="CENTER" wrapText="true" maxWidth="320" 
           style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-font-size: 14px;"/>
    
    <Region prefHeight="10" />

    <Button text="Back to Home ðŸ " onAction="#back" styleClass="btn-back"/>

</VBox>