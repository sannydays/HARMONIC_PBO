<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootStackPane" style="-fx-background-color: #fff0f6;" stylesheets="@style.css"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
           fx:controller="com.app.hormontracker.controller.CalendarController">

    <ScrollPane fitToWidth="true" style="-fx-background: #fff0f6; -fx-background-color: transparent;" pickOnBounds="false">
        <content>
            <VBox alignment="TOP_CENTER" spacing="15" maxWidth="Infinity"
                  style="-fx-background-color: #fff0f6; -fx-padding: 15;">
                
                <HBox alignment="CENTER" spacing="20">
                    <Button text="&lt;" onAction="#prevMonth" styleClass="btn-nav"/>
                    <Label fx:id="lblMonthYear" text="MONTH YEAR" textFill="#e75480">
                        <font><Font name="Arial Bold" size="22"/></font>
                    </Label>
                    <Button text="&gt;" onAction="#nextMonth" styleClass="btn-nav"/>
                </HBox>

                <GridPane hgap="5" alignment="CENTER" maxWidth="600">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="14.28"/><ColumnConstraints percentWidth="14.28"/>
                        <ColumnConstraints percentWidth="14.28"/><ColumnConstraints percentWidth="14.28"/>
                        <ColumnConstraints percentWidth="14.28"/><ColumnConstraints percentWidth="14.28"/>
                        <ColumnConstraints percentWidth="14.28"/>
                    </columnConstraints>
                    <Label text="SUN" GridPane.columnIndex="0" style="-fx-text-fill: #ff9aa2; -fx-font-weight: bold; -fx-alignment: CENTER;" maxWidth="Infinity"/>
                    <Label text="MON" GridPane.columnIndex="1" style="-fx-text-fill: #ffb7b2; -fx-font-weight: bold; -fx-alignment: CENTER;" maxWidth="Infinity"/>
                    <Label text="TUE" GridPane.columnIndex="2" style="-fx-text-fill: #ffdac1; -fx-font-weight: bold; -fx-alignment: CENTER;" maxWidth="Infinity"/>
                    <Label text="WED" GridPane.columnIndex="3" style="-fx-text-fill: #e2f0cb; -fx-font-weight: bold; -fx-alignment: CENTER;" maxWidth="Infinity"/>
                    <Label text="THU" GridPane.columnIndex="4" style="-fx-text-fill: #b5ead7; -fx-font-weight: bold; -fx-alignment: CENTER;" maxWidth="Infinity"/>
                    <Label text="FRI" GridPane.columnIndex="5" style="-fx-text-fill: #c7ceea; -fx-font-weight: bold; -fx-alignment: CENTER;" maxWidth="Infinity"/>
                    <Label text="SAT" GridPane.columnIndex="6" style="-fx-text-fill: #e0b0ff; -fx-font-weight: bold; -fx-alignment: CENTER;" maxWidth="Infinity"/>
                </GridPane>

                <GridPane fx:id="calendarGrid" hgap="5" vgap="5" alignment="CENTER" maxWidth="600">
                </GridPane>

                <Separator style="-fx-background-color: #ffcce0;" maxWidth="600"/>
                
                <Button text="Back to Menu ðŸ " onAction="#back" maxWidth="300" styleClass="btn-back"/>
            
            </VBox>
        </content>
    </ScrollPane>

    <StackPane fx:id="dialogOverlay" visible="false" alignment="CENTER"
               style="-fx-background-color: rgba(255, 255, 255, 0.4);">
    </StackPane>

</StackPane>